<mah:MetroWindow x:Class="iFredApps.TimeTracker.UI.wRecuperarPassword"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iFredApps.TimeTracker.UI"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        mc:Ignorable="d"
        Title="Password Recovery Request - Time Tracker" Height="450" Width="400" WindowStartupLocation="CenterScreen" 
        Icon="./Resources/logo.png">
    <Grid>
        <Border Width="300" CornerRadius="6">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                      Direction ="-90" 
                      RenderingBias ="Quality" 
                      ShadowDepth ="2" 
                      Color ="Gray" />
            </Border.Effect>
            <StackPanel Orientation="Vertical" Margin="20,10,20,20">
                <TextBlock Text="Reset your password" FontSize="22" TextAlignment="Center" VerticalAlignment="Top" 
                           FontWeight="Bold" Margin="0,30,0,0" Padding="0 10" />
                <TextBlock TextAlignment="Center" Text="Enter your email address, and we'll send you a link to reset your password." TextWrapping="Wrap" />

                <Grid VerticalAlignment="Center" Margin="0,25,0,0" Width="220">
                    <Grid Name="grdPedidoRecuperacao" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Email" Grid.Row="0" Margin="0,0" HorizontalAlignment="Left" FontSize="14" />
                        <TextBox Name="txtEmail" Grid.Row="1" Width="220" Text="{Binding email}" Padding="0,5" BorderThickness="0,0,0,1" HorizontalAlignment="Left" FontSize="14" />
                    </Grid>

                    <Grid Name="grdConfirmacaoRecuperacao" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Recovery code" Grid.Row="0" HorizontalAlignment="Left" FontSize="14" />
                        <TextBox Name="txtCodigo" Grid.Row="1" Width="220" Text="{Binding codigo}" Padding="0,5" BorderThickness="0,0,0,1" HorizontalAlignment="Left" FontSize="14" />

                        <TextBlock Text="Password" Margin="0,15,0,0" Grid.Row="2" HorizontalAlignment="Left" FontSize="14" />
                        <PasswordBox Name="txtPassword" Grid.Row="3" Width="220" Padding="0,5" BorderThickness="0,0,0,1" HorizontalAlignment="Left" FontSize="14" />

                        <TextBlock Text="Confirm Password" Margin="0,15,0,0" Grid.Row="4" HorizontalAlignment="Left" FontSize="14" />
                        <PasswordBox Name="txtConfirmPassword" Grid.Row="5" Width="220" Padding="0,5" BorderThickness="0,0,0,1" HorizontalAlignment="Left" FontSize="14" />
                    </Grid>
                </Grid>

                <Button x:Name="AvancarBtn" Foreground="{DynamicResource TextColorBrush}" Margin="0,30,0,0" Height="35" Width="190">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome Name="detailButtonIcon" Kind="SpinnerSolid" Spin="True" Width="14" Height="14" 
                                                   VerticalAlignment="Center" Visibility="{Binding isLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,10,2" />
                            <TextBlock Text="Request Recovery" VerticalAlignment="Center" Margin="0,0,0,2" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
