<Window x:Class="iFredApps.TimeTracker.UI.wRecuperarPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iFredApps.TimeTracker.UI"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        mc:Ignorable="d"
        Title="Recuperar Password - Time Tracker" Height="400" Width="500" WindowStartupLocation="CenterScreen" 
        Icon="./Resources/logo.png">
    <Grid>
        <Border Width="400" CornerRadius="6">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15"
                      Direction ="-90" 
                      RenderingBias ="Quality" 
                      ShadowDepth ="2" 
                      Color ="Gray" />
            </Border.Effect>
            <StackPanel Orientation="Vertical" Margin="20,30,20,20">
                <TextBlock Text="Redefine a tua palavra-passe" FontSize="22" TextAlignment="Center" VerticalAlignment="Top" 
                           FontWeight="Bold" Margin="0,30,0,0" Padding="0 10" />
                <TextBlock TextAlignment="Center" Text="Introduz o teu endereço de email ou nome de utilizador, e enviar-te-emos um link para redefinires a tua palavra-passe" TextWrapping="Wrap" />

                <Grid VerticalAlignment="Center" Margin="0,25,0,0" Width="300">
                    <Grid Name="grdPedidoRecuperacao" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Email" Grid.Row="0" Margin="0,0" HorizontalAlignment="Left" FontSize="14" />
                        <TextBox Name="txtEmail" Grid.Row="1" Text="{Binding email}" Padding="0,5" Width="255" BorderThickness="0,0,0,1" HorizontalAlignment="Left" FontSize="14" />
                    </Grid>

                    <Grid Name="grdConfirmacaoRecuperacao" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Código de recuperação" Grid.Row="0" Margin="0,0" HorizontalAlignment="Left" FontSize="14" />
                        <TextBox Name="txtCodigo" Grid.Row="1" Text="{Binding codigo}" Padding="0,5" Width="255" BorderThickness="0,0,0,1" HorizontalAlignment="Left" FontSize="14" />
                    </Grid>
                </Grid>

                <Button x:Name="AvancarBtn" Foreground="{DynamicResource TextColorBrush}" Margin="0,80,0,0" Height="35" Width="215">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome Name="detailButtonIcon" Kind="SpinnerSolid" Spin="True" Width="14" Height="14" 
                                                   VerticalAlignment="Center" Visibility="{Binding isLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,10,2" />
                            <TextBlock Text="Redefinir palavra-passe" VerticalAlignment="Center" Margin="0,0,0,2" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
